@page

@model BuildingBuddies.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<section id="top" class="one dark cover">
    <p>
        <a asp-page="Create">
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
        </a>
    </p>

    <link rel="stylesheet" type="text/css" href="~/css/table.css">

    <table class="custom">
        <thead>
            <tr>
                <th>Meeting</th>
                <th>Link</th>
                <th>Domain</th>
                <th>Company</th>
                <th>End of registrations</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Meeting)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Domain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.MeetingID"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>