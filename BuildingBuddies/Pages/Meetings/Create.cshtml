@page
@model BuildingBuddies.Pages.Meetings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<section id="contact" class="one dark cover">
    <div class="container">

        <header>
            <h2>Create a meeting</h2>
        </header>

        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meeting.Name" class="control-label"></label>
                <input asp-for="Meeting.Name" class="form-control" />
                <span asp-validation-for="Meeting.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.CompanyName" class="control-label"></label>
                <input asp-for="Meeting.CompanyName" class="form-control" />
                <span asp-validation-for="Meeting.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.EndDate" class="control-label"></label>
                <input asp-for="Meeting.EndDate" class="form-control" />
                <span asp-validation-for="Meeting.EndDate" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input type="submit" class="btn-margin" value="Create" />
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
