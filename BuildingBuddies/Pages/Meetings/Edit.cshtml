@page "{id:int?}"
@model BuildingBuddies.Pages.Meetings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Meeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Meeting.MeetingID" />
            <div class="form-group">
                <label asp-for="Meeting.Name" class="control-label"></label>
                <input asp-for="Meeting.Name" class="form-control" />
                <span asp-validation-for="Meeting.Name" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Meeting.Link" class="control-label"></label>
                <input asp-for="Meeting.Link" class="form-control" />
                <span asp-validation-for="Meeting.Link" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Meeting.Domain" class="control-label"></label>
                <input asp-for="Meeting.Domain" class="form-control" disabled />
                <span asp-validation-for="Meeting.Domain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.CompanyName" class="control-label"></label>
                <input asp-for="Meeting.CompanyName" class="form-control" />
                <span asp-validation-for="Meeting.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.EndDate" class="control-label"></label>
                <input asp-for="Meeting.EndDate" class="form-control" />
                <span asp-validation-for="Meeting.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.Meeting.MeetingID">Cancel</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
